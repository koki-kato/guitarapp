<% provide(:title, @score.title) %>
<h1><%= @score.title %></h1>
<p>アーティスト：<%= @score.artist %></p>
<p>カポ：<%= @score.capo %></p>
  <div>
  <table class="table table-bordered table-condensed score-table">
  </table>
  </div>
  <div>
  <table class="table table-condensed table-hover" id="table-beats">
    <thead>
      <tr>
        <th>拍子</th>
        <th>コード / 歌詞</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @beats.each do |beat| %>
        <tr>
          <td><%= @i += 1 %></td>
          <td><%= beat.image_name %><br>
              <% unless beat.image_name == nil %>
              <%= image_tag "/#{beat.image_name}.png" %>
              <% end %>
              <%= beat.lyric %></td>
        <% if @score.user_id == current_user.id %>      
          <td><%= link_to "設定", edit_user_score_beat_path(user_id: params[:user_id], score_id: beat.score_id, id: beat.id), class: "btn btn-lg btn-primary" %></td>
        <% else %>
          <td></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>